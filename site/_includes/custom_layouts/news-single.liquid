{% include './layouts/head.liquid' %}
<main>
  <section class="blog-details">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <article class="blog-single">
            <div class="inner-blog-details">
              <h2 class="w-xxl-70 w-xl-80 w-100">{{ post.data.title }}</h2>
              <div class="inner-blog-details-meta">
                <ul class="list-unstyled">
                  <li class="list-inline-item">
                    <p>{{ post.data.date | stringDate }}</p>
                  </li>
                  <li class="list-inline-item">
                    <p>
                      <span>
                        Written by:</span>
                      {{ post.data.author }}</p>
                  </li>
                  <li class="list-inline-item">
                    <p>{{ post.content | emojiReadTime | replace: ".", "" }}</p>
                  </li>
                  {% if content != "" and content.length > 0 %}
                    {% assign contentWordCount = content | wordCount %}
                    {% if contentWordCount > 0 %}
                      <li class="list-inline-item">
                        <p>{{ contentWordCount }}<span>
                            words</span>
                        </p>
                      </li>
                    {% endif %}
                  {% endif %}
                </ul>
              </div>
            </div>
            <img
              src="{{ post.data.division_url }}{{ post.data.featuredImg.image }}"
              class="w-100 mb-xxl-11 mb-8"
              alt="{{ post.data.featuredImg.image_alt }}" />
            <div style="max-width: 900px; margin: 0 auto">{{ post.content | markdownify }}</div>
          </article>
        </div>
      </div>
    </div>
  </section>
</main>
{% include './layouts/tail.liquid' %}